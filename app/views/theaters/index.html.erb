<div class="col-md-4 col-md-offset-4">
  <h1 align="center">Theaters </h1>
  <%=link_to "Create", new_theater_url,class: "btn btn-info btn-sm" %>
    <table>
      <tr>
      <td align="center">Name</td>
      <td align="center">Address</td>
      </tr>
    <%@theaters.each do |theater| %>
        <tr>
        <td><%= theater.name %></td>
        <td align="center"> <%= theater.address %></td>
         <td><%=link_to "Edit", edit_theater_path(theater),class: "btn btn-info btn-sm" %></td>
         <td> <%=link_to "Destroy",theater_path(theater),method: :delete,class: "btn btn-info btn-sm"%> </td>
        </tr>
    <% end %>
    </table>
</div>

