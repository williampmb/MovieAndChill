<div class="col-md-4 col-md-offset-4">

    <%= form_for(@theater) do |t| %>
        <%= t.label :name %>
        <%= t.text_field :name, required: true, class: "form-control" %><br>

        <%= t.label :address %>
        <%= t.text_field :address, required: true, class: "form-control" %><br>

        <%= t.submit "Edit", class: "form-control btn-primary btn-lg" %>
    <% end %>
</div>